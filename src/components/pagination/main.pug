+template('pagination')
  .pagination
    +button()(v-on:click='prev(1)' v-bind:class='dim(1)') Prev
    +button()(v-on:click='prev(2)' v-bind:class='hide_prev(2)') {{ number - 2 }}
    +button()(v-on:click='prev(1)' v-bind:class='hide_prev(1)') {{ number - 1 }}
    +button {{ number }}
    +button()(v-on:click='next(1)' v-bind:class='hide_next(1)') {{ number + 1 }}
    +button()(v-on:click='next(2)' v-bind:class='hide_next(2)') {{ number + 2 }}
    +button()(v-on:click='next(1)' v-bind:class='dim(last)') Next
