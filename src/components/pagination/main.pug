+template#pagination
  .pagination
    .button.-flex._touchable(v-on:click='to(1)') First
    .button.-flex._touchable(v-on:click='prev(1)' v-bind:class='dim(1)') Prev
    .button.-flex._touchable(v-on:click='prev(2)' v-bind:class='hide_prev(2)') {{ number - 2 }}
    .button.-flex._touchable(v-on:click='prev(1)' v-bind:class='hide_prev(1)') {{ number - 1 }}
    .button.-flex._touchable {{ number }}
    .button.-flex._touchable(v-on:click='next(1)' v-bind:class='hide_next(1)') {{ number + 1 }}
    .button.-flex._touchable(v-on:click='next(2)' v-bind:class='hide_next(2)') {{ number + 2 }}
    .button.-flex._touchable(v-on:click='next(1)' v-bind:class='dim(last)') Next
    .button.-flex._touchable(v-on:click='to(last)') Last
